{
  "name": "Python Standards",
  "description": "Python project configuration using pyproject.toml with ruff and mypy",
  "python_version": "3.10",
  "build_system": "pyproject.toml",
  "lint": {
    "tools": ["ruff", "mypy"],
    "ruff": {
      "line_length": 100,
      "target_version": "py310",
      "select": ["E", "F", "I", "N", "W", "UP"],
      "ignore": []
    },
    "mypy": {
      "strict": true,
      "python_version": "3.10",
      "warn_return_any": true,
      "warn_unused_configs": true,
      "disallow_untyped_defs": true
    }
  },
  "format": {
    "tool": "ruff",
    "line_length": 100
  },
  "test": {
    "framework": "pytest",
    "coverage_minimum": 80
  }
}
