{
  "name": "Terraform Standards",
  "description": "Terraform configuration with modules and checkov security scanning",
  "terraform_version": "1.6",
  "structure": {
    "modules": "modules/",
    "environments": "environments/",
    "backend": "s3"
  },
  "lint": {
    "tools": ["terraform fmt", "tflint"],
    "tflint": {
      "enabled": true,
      "ruleset": "recommended"
    }
  },
  "security": {
    "tool": "checkov",
    "scan_on_commit": true,
    "fail_on": ["CRITICAL", "HIGH"],
    "skip_checks": []
  },
  "validation": {
    "validate": true,
    "plan": true,
    "required_providers": {
      "aws": "~> 5.0"
    }
  },
  "test": {
    "tool": "terratest",
    "framework": "go"
  }
}
