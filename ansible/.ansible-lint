---
# ansible-lint configuration
profile: production

skip_list:
  - yaml[line-length]  # Allow longer lines in YAML

warn_list:
  - experimental

enable_list:
  - yaml

exclude_paths:
  - .cache/
  - .git/
  - venv/

kinds:
  - yaml: "**/*.yaml"
  - yaml: "**/*.yml"
  - playbook: "**/playbooks/*.yml"
  - tasks: "**/tasks/*.yml"
  - vars: "**/vars/*.yml"
  - meta: "**/meta/*.yml"
